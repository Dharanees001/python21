def is_valid_triangle(a, b, c):
    if a + b > c and a + c > b and b + c > a:
        return True
    else:
        return False

def main():
    try:
        sides = input("Enter the length of three sides of triangle separated by space: ").split()
        a, b, c = map(int, sides)
        
        if is_valid_triangle(a, b, c):
            print("Valid triangle")
        else:
            print("Invalid triangle")
    except ValueError:
        print("Please enter three valid integers for the sides of the triangle.")

if __name__ == "__main__":
    main()
