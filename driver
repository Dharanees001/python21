def check_insurance_eligibility(married, gender, age):
    if married:
        return True
    elif gender == 'male' and age > 30:
        return True
    elif gender == 'female' and age > 25:
        return True
    else:
        return False

def main():
    try:
        married = input("Is the driver married? (yes/no): ").lower() == 'yes'
        gender = input("Enter the gender of the driver (male/female): ").lower()
        age = int(input("Enter the age of the driver: "))
        
        if check_insurance_eligibility(married, gender, age):
            print("The driver is eligible for insurance.")
        else:
            print("The driver is not eligible for insurance.")
    except ValueError:
        print("Please enter a valid age.")

if __name__ == "__main__":
    main()
